@model List<Category>

@{
    ViewData["Title"] = "Categories";
}

<h2 class="text-center p-3"
    style="
        color: #607D8B;
        font-family: math;
        font-weight: 1000;
        border: 1px solid;
        width: max-content;
        border-radius: 8px;
        margin-right: auto;
        margin-left: auto;
    ">
    All Categories
</h2>


<table class="table table-striped table-hover align-items-center ">
    <tr class="bg-dark text-white">
        <th> ID</th>
        <th> category Name</th>
        <th> category Discription</th>

    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td> @category.ID </td>
            <td> @category.Name </td>
            <td> @category.Description </td>

        </tr>
    }

</table>
<a asp-action="Add" asp-controller="Category" class="btn btn-success">Add New Category</a>